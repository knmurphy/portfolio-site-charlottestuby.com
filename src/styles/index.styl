// ================================================
// VARIABLES
// ================================================

// COLOR PROPERTIES
$primary				= blue
$secondary				= red
$tertiary				= yellow
$white					= white
$black					= #000030

	// BACKGROUND COLORS
	$mainBackgroundColor	= $primary
	$contentBackgroundColor = $white

	// TEXT COLORS
	$mainTextColor			= $black

		// LINKS
			// ON MAIN COLOR
			$linkOnMainColor			= $white
			$linkHoverOnMainColor		= blend(rgba($linkOnMainColor, .8), $mainBackgroundColor)
			$linkActiveOnMainColor		= blend(rgba($linkOnMainColor, .6), $mainBackgroundColor)
			$linkFocusOnMainColor		= blend(rgba($linkOnMainColor, .2), $mainBackgroundColor)

			// ON MAIN COLOR
			$linkOnContentColor			= $primary
			$linkHoverOnContentColor	= darken($linkOnContentColor, 10)
			$linkActiveOnContentColor	= blend(rgba($linkOnContentColor, .6), $contentBackgroundColor)
			$linkFocusOnContentColor	= blend(rgba($linkOnContentColor, .1), $contentBackgroundColor)

// TYPOGRAPHY
$mainFontFamily 		= 'HKGrotesk', 'Akzident Grotesk', Arial, sans-serif

$lightFontWeight		= 300
$regularFontWeight		= 400
$mediumFontWeight		= 500
$boldFontWeight			= 600

	// FONT SIZE
	$textFontSize 			= 20px
	$headlineFontSize 		= 28px
	$subHeadlineFontSize	= 18px
	$navFontSize 			= 22px
	$logoFontSize 			= 24px
	$buttonFontSize			= $subHeadlineFontSize

	// LINE HEIGHT
	$textLineHeight			= $textFontSize + ($textFontSize / 4)
	$headlineLineHeight		= $headlineFontSize + ($headlineFontSize / 6)
	$subHeadlineLineHeight	= $subHeadlineFontSize + ($subHeadlineFontSize / 5)
	$navLineHeight			= $navFontSize
	$logoLineHeight			= $logoFontSize
	$buttonLineHeight		= $buttonFontSize

	// FONT WEIGHT
	$textFontWeight			= $lightFontWeight
	$headlineFontWeight		= $mediumFontWeight
	$subHeadlineFontWeight	= $lightFontWeight
	$navFontWeight			= $regularFontWeight
	$logoFontWeight			= $boldFontWeight
	$buttonFontWeight		= $textFontWeight

// TRANSITIONS DURATIONS AND EASES
$quickTransition		= 100ms
$mediumTransition		= 200ms
$slowTransition			= 400ms
$extraSlowTransition	= 2000ms

$smoothTransitionEase	= cubic-bezier(0.190, 1.000, 0.220, 1.000)

// MEDIA QUERIES
$mqDesktopMaxWidth					= 960px
$mqTabletMaxWidth					= 600px
$mqMobileMaxWidth					= 400px

// PATTERNS
$pattern1				= 'data:image/svg+xml;base64,'

// MIN DIMENSIONS
$bodyMinWidth			= 320px
$bodyMinHeight			= 480px

// RADIUSES
$mainRadiusSize			= 6px

// HEADER
$headerHeight 			= 60px

// NAVIGATION
$navBarWidth			= 60px

// WORK SLIDER
$captionHeight 			= 112px

// ================================================
// BASICS
// ================================================

html,
body,
#root,
main
	position relative
	width 100%
	height 100%
	min-height $bodyMinHeight
	min-width $bodyMinWidth

body
	font-family $mainFontFamily
	font-size $textFontSize
	font-weight $textFontWeight
	line-height $textLineHeight
	color $mainTextColor
	background $mainBackgroundColor
	-webkit-font-smoothing antialiased

h2
	font-size $headlineFontSize
	font-weight $headlineFontWeight
	line-height $headlineLineHeight

h3
	font-size $subHeadlineFontSize
	font-weight $subHeadlineFontWeight
	line-height $subHeadlineLineHeight

a,
a:visited
	font-size inherit
	font-weight inherit
	line-height inherit
	text-decoration none
	color $linkOnMainColor
	transition color $quickTransition ease-out

	&:hover
		color $linkHoverOnMainColor

	&:active
		color $linkActiveOnMainColor

	&:hover:not(.active),
	&:active:not(.active)
		text-decoration underline

	&:focus,
	&:visited:focus,
	&:hover:focus
		outline none
		border-radius 3px
		background $linkFocusOnMainColor
		text-decoration overline

	&:active:focus
		background none
		text-decoration none


nav a
	font-size $navFontSize
	font-weight $navFontWeight
	line-height $navLineHeight
	text-transform lowercase

	&.active:focus,
	&.active:visited:focus,
	&.active:hover:focus
		border-radius 0

	&.active,
	&.active:hover,
	&.active:active,
	&.active:visited
		background $contentBackgroundColor
		color $linkOnContentColor
		cursor default

		&:focus
			background $linkFocusOnContentColor

main
	box-sizing border-box
	position relative

// ================================================
// HEADER
// ================================================

header
	width 100%
	height $headerHeight
	float left
	box-sizing border-box

	h1
		margin-top 15px
		margin-left $navBarWidth

	a.logo
		color $linkOnMainColor
		font-size $logoFontSize
		font-weight $logoFontWeight
		line-height $logoLineHeight

// ================================================
// NAVIGATION
// ================================================

nav
	top 0
	left 0
	position absolute
	height 100%
	width $navBarWidth

	a,
	li
		width 120px
		height $navBarWidth

	a
		padding 15px 0
		text-align center
		box-sizing border-box

	ul,
	li,
	a
		display block

	ul
		position absolute
		top 0
		left 0
		height 100%
		width 100%

		li
			transform-origin 0 0

			&:first-child
				transform rotate(-90deg) translateX(-240px)

			&:last-child
				transform rotate(-90deg) translateX(-60px)

// ================================================
// ARTICLE
// ================================================

article
	padding-left $navBarWidth
	color $mainTextColor


.without-navs article
	padding-left 0

article,
section.content
	width 100%
	height auto
	float left
	position relative
	box-sizing border-box

article section.content
	border-top-left-radius $mainRadiusSize
	background $contentBackgroundColor

	a
		color $linkOnContentColor

		&:hover,
		&:visited:hover
			color $linkHoverOnContentColor

		&:active,
		&:visited:active
			color $linkActiveOnContentColor

		&:focus,
		&.active:focus,
		&:visited:focus,
		&:hover:focus
			background $linkFocusOnContentColor

.about article section.content,
.without-navs article section.content
	border-top-left-radius 0

// ================================================
// WORK THUMBNAILS
// ================================================

.works-list
	width 100%
	height 100%
	position relative

.work-captions,
.work-thumbnails
	overflow hidden

.work-captions
	background $contentBackgroundColor
	width 100%
	height $captionHeight
	position absolute
	bottom 0
	left 0
	clearfix()

	.work-caption-track
		width 100%
		height auto
		transition margin $mediumTransition $smoothTransitionEase
		margin-top 0

		.work-caption
			position relative
			width 100%
			height $captionHeight
			box-sizing border-box
			padding 25px 30px

	h2
		margin-bottom 3px

.work-thumbnails,
.work-thumbnail,
.work-thumbnail a,
.work-thumbnail figure
	width 100%
	height 100%
	position relative
	box-sizing border-box

article section.content .work-thumbnail a:focus
	background none
	border none
	box-shadow none

.work-thumbnails
	min-height $bodyMinHeight - $headerHeight

	.slider-frame
		border-top-left-radius $mainRadiusSize
		background $mainBackgroundColor
		background url($pattern1) repeat fixed center center
		background-size 60px 60px

	.slider-frame,
	.slider-list,
	.slider-slide,
	.work-thumbnail
		min-height $bodyMinHeight - $captionHeight - $headerHeight

.work-thumbnail
	float left

	.work-thumb-wrapper
		position absolute
		top 0
		left 0
		width 100%
		height 100%

		figure
			background-size cover
			background-position center center
			background-repeat no-repeat

	.landscape
		display block

	.portrait
		display none

	@media screen and (orientation:portrait)
		.landscape
			display none

		.portrait
			display block

	@media screen and (orientation:portrait)
		.landscape
			display block

		.portrait
			display none

// ================================================
// WORK THUMBNAILS BULLET LIST
// ================================================

$bulletWidth = 8px

.thumbnails-bullet-nav
	position absolute
	right 20px
	bottom 20px + $captionHeight
	width $bulletWidth
	height auto

	.thumbnails-bullet
		width $bulletWidth
		height $bulletWidth
		border-radius 50%
		box-sizing border-box
		border 1px solid $linkOnContentColor
		box-shadow 0 0 0 1px rgba(white, .2), inset 0 0 0 2px rgba(white, .2)
		margin-top $bulletWidth + $bulletWidth
		transition all $slowTransition $smoothTransitionEase
		background-color none

		&:hover
			border-color $linkHoverOnContentColor
			background-color $linkHoverOnContentColor

		&:focus
			border-color $linkFocusOnContentColor
			background-color $linkFocusOnContentColor

		&.active
			border-color $secondary
			background-color $secondary

// ================================================
// WORK THUMBNAILS ARROW NAV
// ================================================

.thumbnails-arrow-nav
	position absolute
	width $navBarWidth
	height auto
	bottom 0
	left $navBarWidth * -1

	.thumbnails-arrow
		display block
		width $navBarWidth
		height $navBarWidth
		text-align center
		cursor pointer
		line-height $navBarWidth
		background none

		svg
			width 25px
			height 25px
			fill $linkOnMainColor
			transition fill $quickTransition $smoothTransitionEase

		&:hover svg
			fill $linkHoverOnMainColor

		&:active svg
			fill $linkActiveOnMainColor

		&:focus svg
			fill $linkFocusOnMainColor

	a.thumbnails-arrow
		color $linkOnMainColor
		text-decoration none

		&:hover
			color $linkHoverOnMainColor

		&:focus
			color $linkFocusOnMainColor

	span.thumbnails-arrow
		color $linkHoverOnContentColor

		&,
		&:hover,
		&:active,
			svg
				fill $linkOnMainColor
				cursor default
				opacity .6

// ================================================
// THUMBNAIL FROMS
// ================================================

.thumbnail-forms,
.thumbnail-forms-list
	position absolute
	top 0
	left 0
	overflow hidden
	pointer-events none
	z-index 1

.thumbnail-forms-list
	transition top $extraSlowTransition $smoothTransitionEase
	transition-delay $quickTransition

.thumbnail-form
	float left
	background-position top right
	background-repeat no-repeat
	background-size 300px auto
	opacity 0
	transition opacity $extraSlowTransition $smoothTransitionEase

	&.active
		opacity 1

	@media (max-width: $mqTabletMaxWidth)
		background-size 40% auto

// ================================================
// WORKS
// ================================================

$workImageBorder = 10px;

.work-header,
.work-images,
.work-image,
.work-image img
	float left
	width 100%
	box-sizing border-box

.work-header
	padding 15px 20px 20px
	position relative
	box-shadow 0 3px 0 0 rgba($mainBackgroundColor, .1)

.work-title
	margin-right 20px

a.work-close-button
	border none
	background none
	width 25px
	height 25px
	font-size 40px
	line-height 28px
	position absolute
	top 20px
	right 20px

	svg
		display block
		float left
		fill $linkOnContentColor

	&:hover svg
		fill $linkHoverOnContentColor

	&:active svg
		fill $linkActiveOnContentColor

// ================================================
// ABOUT
// ================================================

.about-picture,
.about-text
	width 50%
	height auto
	float left
	box-sizing border-box

	@media (max-width: $mqDesktopMaxWidth)
		width 100%

.about-picture
	float right
	padding 0 40px 0 0
	margin-top -40px

	img,
	svg
		width 100%
		height 100%
		float left

	img
		display none
		clip-path unquote('url(#aboutImageClipPath)')

	@media (max-width: $mqDesktopMaxWidth)
		&
			padding 0
			margin-top 0

		img
			display block

		svg
			display none


.about-text
	padding 10%
	float right

	h1
		font-weight bold
		font-size 24px
		margin-bottom 24px

	p
		margin-bottom 14px
