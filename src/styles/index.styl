// ICON
// ================================================

.svg-icon
	width 25px
	height 25px
	fill currentColor

// ================================================
// WORK THUMBNAILS
// ================================================

.works-list
	width 100%
	height 100%
	position relative
	box-sizing border-box

.work-captions,
.work-thumbnails
	overflow hidden

.work-captions
	background $contentBackgroundColor
	width 100%
	height $captionHeight
	position absolute
	bottom $captionHeight * -1
	left 0
	clearfix()

	.work-caption-track
