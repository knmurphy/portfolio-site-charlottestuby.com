.thumbnail-forms,
.thumbnail-forms-list
	position absolute
	top 0
	left 0
	pointer-events none
	z-index 1
	transition left $extraSlowTransition $smoothTransitionEase
	width 100vw
	height 100vh
	max-width 1280px

	.maxWidthReached &
		left -20px

.thumbnail-forms
	overflow hidden

.thumbnail-forms-list
	transition top $extraSlowTransition $smoothTransitionEase
	transition-delay $quickTransition

.thumbnail-form
	float left
	opacity 0
	transition opacity $extraSlowTransition $smoothTransitionEase
	width 100vw
	height 100vh
	max-width 1280px

	.gatsby-image-wrapper
		width 300px
		margin-right 50px
		float right

	&.active
		opacity 1

	@media (max-width: $mqTabletMaxWidth)
		background-size 40% auto
