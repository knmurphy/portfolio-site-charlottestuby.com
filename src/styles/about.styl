.about-picture,
.about-content
	width 50%
	height auto
	float left
	box-sizing border-box

	@media (max-width: $mqDesktopMaxWidth)
		width 100%

.about-picture
	padding 0
	margin-top -40px

	.img,
	.about-form
		pointer-events none
		position absolute

	.img
		width 100%
		height 100%
		float left
		background-size cover
		width 45%
		height 0
		padding-bottom 45%
		top -40px
		right -40px
		border-radius 50%
		overflow hidden
		border 20px solid $contentBackgroundColor

		img
			display block
			width 100%
			height auto

	@media (max-width: $mqDesktopMaxWidth)
		&
			padding 0
			margin-top 0

		.img
			position static
			border-radius 0
			width 100%
			padding-bottom 75%
			border none

		.about-forms
			display none

	.image-form
		position relative
		z-index 2

	.about-forms
		pointer-events none
		position fixed
		top 0
		left 0
		width 100vw
		height 100vh
		height calc(var(--vh, 1vh) * 100)
		overflow hidden

		& > div
			position relative
			width 100vw
			height 100vh
			height calc(var(--vh, 1vh) * 100)

	.about-form
		transform translate(-50%, -50%)

		&:nth-child(2)
			animation-delay 9s
		&:nth-child(3)
			animation-delay 3s
		&:nth-child(4)
			animation-duration 22s
		&:nth-child(5)
			animation-duration 30s
			animation-delay 10s
		&:nth-child(6)
			animation-delay 11s
			animation-direction reverse

.about-content
	padding 10%

	h1
		font-size 24px

	h1,
	h2,
	h3
		margin-bottom 24px

	p
		margin-bottom 14px
		font-size 80%

	.about-text
		margin-bottom 40px

	@media (max-width: $mqTabletMaxWidth)
		.btn
			padding 8px 11px 9px
			display block
			text-align center
