$bulletWidth = 8px

.thumbnails-bullet-nav
	position absolute
	max-height calc((100 * var(--vh, 1vh)) - 172px)
	width auto
	top calc((100 * var(--vh, 1vh)) - 172px)
	right 0
	box-sizing border-box
	display inline-flex
	flex-flow column
	flex-wrap wrap-reverse
	padding-bottom $bulletWidth + $bulletWidth
	padding-right $bulletWidth + $bulletWidth
	transform translateY(-100%)

	.thumbnails-bullet
		width $bulletWidth
		height $bulletWidth
		border-radius 50%
		box-sizing border-box
		border 1px solid white
		box-shadow 0 0 0 1px rgba(black, .2), inset 0 0 0 2px rgba(black, .2)
		margin-top $bulletWidth + $bulletWidth
		margin-left $bulletWidth + $bulletWidth
		transition all $slowTransition $smoothTransitionEase
		background-color none
		cursor pointer

		&:hover
			border-color $linkHoverOnContentColor
			background-color $linkHoverOnContentColor

		&:focus
			border-color $linkFocusOnContentColor
			background-color $linkFocusOnContentColor

		&.active
			border-color $secondary
			background-color $secondary
			box-shadow none
