article
	padding-left $navBarWidth
	color $mainTextColor
	position relative


.without-navs article
	padding-left 0

article,
section.content
	width 100%
	height auto
	float left
	position relative
	box-sizing border-box
	min-height calc(100vh - 60px)
	min-height calc((var(--vh, 1vh) * 100) - 172px)

	.home &
		height calc(100vh - 60px)
		height calc((var(--vh, 1vh) * 100) - 172px)

article section.content
	border-top-left-radius $mainRadiusSize
	background $contentBackgroundColor

	.about &
		border-top-left-radius 0

	.work &
		height auto
		min-height calc(100vh - 172px)
		min-height calc((var(--vh, 1vh) * 100) - 172px)
		border-radius 0
	
	@media screen and (max-width: $mqTabletLargeMaxWidth)
		.about &
			overflow hidden

	@media screen and (min-width: $mqDesktopMaxWidth)
		&
			border-top-right-radius $mainRadiusSize

	a,
	.interactive
		color $linkOnContentColor

		&:hover,
		&:visited:hover
			color $linkHoverOnContentColor

		&:active,
		&:visited:active
			color $linkActiveOnContentColor

		&:focus,
		&.active:focus,
		&:visited:focus,
		&:hover:focus
			background $linkFocusOnContentColor
