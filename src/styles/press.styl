.press-content
    position relative
    padding 10vmin
    box-sizing border-box
    display flex
    justify-content center
    justify-items center
    flex-wrap wrap

    &:hover *
        text-decoration none !important

.press-link-svg
    width 300px
    height 300px

    @media screen and (max-width: $mqMobileMaxWidth)
        width 200px
        height 200px

.press-link
    flex 1 0 50%
    margin-bottom 10vmin
    display grid
    justify-content center
    justify-items center

    @media screen and (max-width: $mqTabletLargeMaxWidth)
        flex 0 0 100%

    & > a
        display inline-grid
        grid-template-rows 300px auto
        justify-content center
        justify-items center
        text-align center
        grid-gap 16px

        @media screen and (max-width: $mqMobileMaxWidth)
            grid-template-rows 200px auto

    path
        stroke-width 3px
        transition stroke-width 100ms ease-out

    &:hover
        path
            stroke-width 6px

        .press-link-url
            text-decoration underline !important

.press-link-content
    display grid
    grid-gap 8px

.press-link-date
    color desaturate(lighten($primary, 20), 50)
    text-transform uppercase
    font-size 14px
    font-weight bold
    letter-spacing 0.2em

.press-link-url
    color $mainTextColor
