
// COLOR PROPERTIES
$primary				= blue
$secondary				= red
$tertiary				= yellow
$white					= white
$black					= #000030

	// BACKGROUND COLORS
	$mainBackgroundColor	= $primary
	$contentBackgroundColor = $white

	// TEXT COLORS
	$mainTextColor			= $black

		// LINKS
			// ON MAIN COLOR
			$linkOnMainColor			= $white
			$linkHoverOnMainColor		= blend(rgba($linkOnMainColor, .8), $mainBackgroundColor)
			$linkActiveOnMainColor		= blend(rgba($linkOnMainColor, .6), $mainBackgroundColor)
			$linkFocusOnMainColor		= blend(rgba($linkOnMainColor, .2), $mainBackgroundColor)

			// ON MAIN COLOR
			$linkOnContentColor			= $primary
			$linkHoverOnContentColor	= darken($linkOnContentColor, 10)
			$linkActiveOnContentColor	= blend(rgba($linkOnContentColor, .6), $contentBackgroundColor)
			$linkFocusOnContentColor	= blend(rgba($linkOnContentColor, .1), $contentBackgroundColor)

// TYPOGRAPHY
$mainFontFamily 		= 'HKGrotesk', 'Akzident Grotesk', Arial, sans-serif

$lightFontWeight		= 300
$regularFontWeight		= 400
$mediumFontWeight		= 400
$boldFontWeight			= 400

	// FONT SIZE
	$textFontSize 			= 20px
	$headlineFontSize 		= 24px
	$subHeadlineFontSize	= 18px
	$navFontSize 			= 22px
	$logoFontSize 			= 24px
	$buttonFontSize			= $subHeadlineFontSize

	// LINE HEIGHT
	$textLineHeight			= $textFontSize + ($textFontSize / 4)
	$headlineLineHeight		= $headlineFontSize + ($headlineFontSize / 6)
	$subHeadlineLineHeight	= $subHeadlineFontSize + ($subHeadlineFontSize / 5)
	$navLineHeight			= $navFontSize
	$logoLineHeight			= $logoFontSize
	$buttonLineHeight		= $buttonFontSize

	// FONT WEIGHT
	$textFontWeight			= $lightFontWeight
	$headlineFontWeight		= $mediumFontWeight
	$subHeadlineFontWeight	= $lightFontWeight
	$navFontWeight			= $regularFontWeight
	$logoFontWeight			= $boldFontWeight
	$buttonFontWeight		= $textFontWeight

// TRANSITIONS DURATIONS AND EASES
$quickTransition		= 100ms
$mediumTransition		= 200ms
$slowTransition			= 400ms
$extraSlowTransition	= 2000ms

$smoothTransitionEase	= cubic-bezier(0.190, 1.000, 0.220, 1.000)

// MEDIA QUERIES
$mqDesktopMaxWidth					= 1280px
$mqTabletLargeMaxWidth				= 960px
$mqTabletMaxWidth					= 600px
$mqMobileMaxWidth					= 400px

